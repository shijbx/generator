package ${package.Controller};

import com.baomidou.mybatisplus.core.metadata.IPage;
import com.bbbus.auth.annotation.Log;
import com.bbbus.auth.enums.BusinessType;
import com.bbbus.common.core.domain.DelBO;
import com.bbbus.common.core.domain.R;
import com.bbbus.common.core.utils.ObjectUtil;
import org.springframework.web.bind.annotation.*;
import com.bbbus.common.mybatis.core.page.PageQuery;
import com.bbbus.common.satoken.utils.TokenUtils;
import com.bbbus.dao.order.domain.bo.${entity}BO;
import com.bbbus.dao.order.domain.bo.${entity}AddBO;
import com.bbbus.dao.order.domain.bo.${entity}UpdateBO;
import com.bbbus.dao.order.domain.vo.${entity}VO;
import com.bbbus.dao.order.domain.vo.${entity}ListVO;
import com.bbbus.services.order.service.${table.serviceName};
import io.swagger.v3.oas.annotations.Operation;
import io.swagger.v3.oas.annotations.tags.Tag;
import lombok.RequiredArgsConstructor;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import java.util.List;


/**
 * $!{table.comment} 前端控制器
 *
 * @author ${author}
 * @since ${date}
 */
@Tag(name = "$!{table.comment}相关接口")
@RequiredArgsConstructor
@RestController
@RequestMapping("${entity}")
public class ${table.controllerName} {

    private final ${table.serviceName} service;

    @PostMapping("/queryPageByList")
    @Log(title = "查询列表-分页", businessType = BusinessType.QUERY)
    @Operation(summary = "查询列表-分页", description = "查询列表-分页")
    public R<IPage<${entity}ListVO>> queryPageByList(@RequestBody PageQuery pageQuery) {
        return R.ok(service.queryPageByList(TokenUtils.getOperatorId(), pageQuery));
    }

    @GetMapping("/queryList")
    @Log(title = "查询列表",businessType = BusinessType.QUERY)
    @Operation(summary = "查询列表", description = "查询列表")
    public R<List<${entity}VO>> queryList(${entity}BO bo) {
        return R.ok(service.queryList(bo));
    }


    @GetMapping("/getInfo/{id}")
    @Log(title = "查询详情",businessType = BusinessType.QUERY)
    @Operation(summary = "查询详情", description = "查询详情")
    public R<${entity}VO> getInfo(@PathVariable Long id) {
        return R.ok(service.selectById(id));
    }

    @PostMapping("/save")
    @Log(title = "新增",businessType = BusinessType.INSERT)
    @Operation(summary = "新增", description = "新增")
    public R<Boolean> save(@RequestBody ${entity}AddBO bo) {
        ${entity}BO entity = ObjectUtil.copy(bo, ${entity}BO.class);
        entity.setOperatorId(TokenUtils.getOperatorId());
        return R.ok(service.save(entity));
    }

    @PostMapping("/update")
    @Log(title = "修改",businessType = BusinessType.UPDATE)
    @Operation(summary = "修改", description = "修改")
    public R<Boolean> update(@RequestBody ${entity}UpdateBO bo) {
        ${entity}BO entity = ObjectUtil.copy(bo, ${entity}BO.class);
        return R.ok(service.updateById(entity));
    }

    @PostMapping("/delete")
    @Log(title = "删除",businessType = BusinessType.DELETE)
    @Operation(summary = "删除", description = "删除")
    public R<Boolean> delete(@RequestBody DelBO bo) {
        return R.ok(service.removeById(bo.getId()));
    }

}
